{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@mongo/*": ["mongo/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@sockets/*": ["sockets/*"],
      "@utils/*": ["utils/*"],
      "@src/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express"]
  },
  "include": ["src/**/*"]
}
