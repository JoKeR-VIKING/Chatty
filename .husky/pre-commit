echo "--- Running pre-commit checks ---"

# Ensure pnpm is available
export PATH=$(npm bin):$PATH

# Define directories
dirs="client server"

for dir in $dirs; do
  echo "Processing $dir..."
  cd "$dir" || exit 1

  # TypeScript checks
  echo "Running TypeScript checks in $dir..."
  if pnpm type-check > /dev/null 2>&1; then
    echo -e "\033[32m✔ TypeScript checks passed in $dir\033[0m"  # Green tick for success (ANSI color green)
  else
    echo -e "\033[31m✖ TypeScript checks failed in $dir\033[0m"  # Red cross for failure (ANSI color red)
    exit 1
  fi

  # Prettier check
  echo "Prettifying code in $dir..."
  if pnpm prettier --check . > /dev/null 2>&1; then
    echo -e "\033[32m✔ Prettier checks passed in $dir\033[0m"  # Green tick for success
  else
    echo -e "\033[31m✖ Prettier checks failed in $dir\033[0m"  # Red cross for failure
    exit 1
  fi

  cd - > /dev/null || exit
done

echo "--- Pre-commit checks completed successfully ---"
